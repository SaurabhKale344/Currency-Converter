    <script>
        async function convertCurrency() {
            var fromCurrency = document.getElementById("fromCurrency").value;
            var toCurrency = document.getElementById("toCurrency").value;
            var amount = document.getElementById("amount").value;

            try {
                const response = await fetch(`https://v6.exchangerate-api.com/v6/a36faa18cdafb26c8e8a87f9/latest/${fromCurrency}`);
                const data = await response.json();

                if (data.conversion_rates.hasOwnProperty(toCurrency)) {
                    const exchangeRate = data.conversion_rates[toCurrency];
                    const convertedAmount = (amount * exchangeRate).toFixed(2);
                    document.getElementById("convertedAmount").value = convertedAmount;
                } else {
                    document.getElementById("convertedAmount").value = "Conversion not available";
                }
            } catch (error) {
                console.error("Error:", error);
                document.getElementById("convertedAmount").value = "Conversion error";
            }
        }
